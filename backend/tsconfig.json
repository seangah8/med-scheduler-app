{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "commonjs",                     
    "rootDir": ".",                         
    "outDir": "dist",                         
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                     
    "resolveJsonModule": true                 
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}