{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "commonjs",                     
    "rootDir": "./src",                         
    "outDir": "./dist",   // compiled .js files go here                      
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                     
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true      
              
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}